        </activity>

    	<activity android:name=".PreferencesActivity" android:configChanges="orientation"></activity>
    	<activity android:name=".IncomeActivity" android:label="@string/income_title" android:configChanges="orientation"></activity>
    	<activity android:name=".ExpenseActivity" android:label="@string/expense_title" android:configChanges="orientation"></activity>
    	<activity android:name=".RecentActivity" android:label="@string/recent_title" android:configChanges="orientation"></activity>
    	<activity android:name=".SelectActivity" android:label="@string/select_title" android:configChanges="orientation"></activity>
    	<activity android:name=".ResultActivity" android:label="@string/result_title" android:configChanges="orientation"></activity>
	</application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-sdk android:minSdkVersion="3" />
</manifest> 